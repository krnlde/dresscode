<?xml version="1.0" encoding="utf-8"?>
<fs:xmlfs
	xmlns:xref="x-schema:refSchema.xml"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:fs="http://mocovi.de/schema/xmlfs"
	xmlns="http://mocovi.de/schema/controller"
	timezone="Europe/Berlin"
	defaultFormat="html"
	defaultLanguage="de"
	>

	<fs:file name="index" redirect="/home" invisible="1"/>
	<fs:file name="home" alias="Home" aliasToken="Home" methods="get" author="Kai Dorschner">
		<root>
			<article>
				<header>
					<headline>Welcome to mocovi</headline>
				</header>
				<section>
					<paragraph>You haven't defined an application suiting your domain yet. Your domain is "$domain".</paragraph>
					<paragraph>Please copy the <quote>yourdomain.com</quote> folder in the <quote>[mocoviroot]/applications</quote> folder and rename it to "$domain"</paragraph>
				</section>
			</article>
		</root>
	</fs:file>

	<fs:file name="404" invisible="1" statusCode="404">
		<root>
			<header>
				<menu/>
			</header>
			<article>
				<header>
					<headline>404 - File not found</headline>
				</header>
				<section>
					<paragraph>The requested file $path was not found.</paragraph>
				</section>
			</article>
		</root>
	</fs:file>

</fs:xmlfs>