					<paragraph>
						Text $title, $path, $path
					</paragraph>
					<youtube videoId="JtF7z_DZdVk"/>
					<vimeo videoId="21762564"/>
				</article>
				<footer>
					<section>
						<headline priority="4">Sitemap</headline>
						<menu source="/" />
					</section>
				</footer>
			</root>

			<fs:file name="gallery" alias="Image Gallery" methods="get" author="Kai Dorschner">
