<?xml version="1.0" encoding="utf-8"?>
<fs:xmlfs
	xmlns:xref="x-schema:refSchema.xml"
	xmlns:xi="http://www.w3.org/2001/XInclude"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:fs="http://mocovi.de/schema/xmlfs"
	xmlns="http://mocovi.de/schema/controller"
	timezone="Europe/Berlin"
	defaultFormat="html"
	defaultLanguage="de"
	>

	<fs:file name="index" invisible="1" redirect="/home"/>

	<fs:file name="home" aliasToken="Home" methods="get" author="Kai Dorschner">
		<fs:keywords>
			<fs:element lang="de">krnl</fs:element>
			<fs:element lang="en">kernel</fs:element>
			<fs:element>kernel32</fs:element>
		</fs:keywords>
		<root>
			<header class="hero-unit">
				<image source="http://lorempixel.com/896/420/technics">
					<attribute name="description">
						<translate token="loremipsum" cut="40"/>
					</attribute>
				</image>
				<paragraph>
					<image source="http://lorempixel.com/221/160/people">
						<attribute name="description">moep</attribute>
					</image>
					<image source="http://lorempixel.com/221/160/technics"/>
					<image source="http://lorempixel.com/221/160/nature"/>
					<image source="http://lorempixel.com/221/160/transport"/>
				</paragraph>
			</header>
			<article>
				<header>
					<headline>
						<translate token="loremipsum" cut="15"/>
					</headline>
					<sessionstore>
						<form jumpTo="/home/videos" method="post">
							<input name="name" placeholder="Your Name" label="test" required="1" />
							<input name="email" preset="email" placeholder="to@example.com" label="test" />
							<input name="text" placeholder="Your Message" label="test" />
						</form>
					</sessionstore>
					<link to="me@krnl.de"/>
					<paragraph>
						<translate token="DurationYears">
							<attribute name="count">
								<duration from="2013-12-24" format="y"/>
							</attribute>
						</translate>, <translate token="DurationMonths">
							<attribute name="count">
								<duration from="2013-12-24" format="m"/>
